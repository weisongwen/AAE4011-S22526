<?xml version="1.0"?>
<!--
AAE4011 - Artificial Intelligence for Unmanned Autonomous Systems
Launch file for object detection node using YOLOv5

Usage:
  roslaunch aae4011_ai_uas object_detection.launch
  roslaunch aae4011_ai_uas object_detection.launch image_topic:=/camera/image_raw
-->
<launch>
  <!-- Arguments -->
  <arg name="image_topic" default="/camera/image_raw" 
       doc="Input image topic"/>
  <arg name="detection_topic" default="/detections" 
       doc="Output detection topic"/>
  <arg name="model_name" default="yolov5s" 
       doc="YOLOv5 model name (yolov5n, yolov5s, yolov5m, yolov5l, yolov5x)"/>
  <arg name="confidence_threshold" default="0.5" 
       doc="Detection confidence threshold"/>
  
  <!-- Object Detection Node -->
  <node name="object_detection_node" pkg="aae4011_ai_uas" type="object_detection_node.py" output="screen">
    <param name="image_topic" value="$(arg image_topic)"/>
    <param name="detection_topic" value="$(arg detection_topic)"/>
    <param name="model_name" value="$(arg model_name)"/>
    <param name="confidence_threshold" value="$(arg confidence_threshold)"/>
  </node>
</launch>
