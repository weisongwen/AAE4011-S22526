<?xml version="1.0"?>
<!--
AAE4011 - Artificial Intelligence for Unmanned Autonomous Systems
Demo launch file - launches multiple nodes for demonstration

Usage:
  roslaunch aae4011_ai_uas demo.launch
-->
<launch>
  <!-- Arguments -->
  <arg name="use_rviz" default="true" doc="Launch RViz for visualization"/>
  
  <!-- Include trajectory visualizer -->
  <include file="$(find aae4011_ai_uas)/launch/trajectory_visualizer.launch">
    <arg name="csv_file" value="$(find aae4011_ai_uas)/config/sample_trajectory.csv"/>
  </include>
  
  <!-- RViz -->
  <node if="$(arg use_rviz)" name="rviz" pkg="rviz" type="rviz" 
        args="-d $(find aae4011_ai_uas)/config/demo.rviz"/>
</launch>
